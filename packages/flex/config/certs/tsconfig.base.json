// https://www.sensedeep.com/blog/posts/2021/how-to-create-single-source-npm-module.html
{
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,  
    "target": "es2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "sourceMap": true,
    "inlineSourceMap": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "traceResolution": false,
    "types": ["node", "jest"],
    "baseUrl": "./",
    "rootDir": "./src",

    // "allowJs": true,
    // "allowSyntheticDefaultImports": true,
    // "baseUrl": "src",
    // "declaration": true,
    // "esModuleInterop": true,
    // "inlineSourceMap": false,
    // "lib": ["esnext"],
    // "listEmittedFiles": false,
    // "listFiles": false,
    // "moduleResolution": "node",
    // "noFallthroughCasesInSwitch": true,
    // "pretty": true,
    // "resolveJsonModule": true,
    // "rootDir": "src",
    // "skipLibCheck": true,
    // "strict": true,
    // "traceResolution": false,
    // "types": ["node", "jest"],

    "paths": {
      "flexiness": ["../..types"]
    }
  },
  "compileOnSave": false,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
     "dist/**/*" 
  ],
  "references": [
  ]
}
