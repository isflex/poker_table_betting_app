---
title: Séparateur
active: {
    components: {
        divider: true
    }
}
root: ../
---
{{#extend "menu-page"}}
{{#content "content"}}
{{#> components-title desc="Séparateur"}}{{/components-title }}

<section class="section">
    {{#> snippet id="divider-1" title="Séparateur"}}
        {{#content "light"}}
            <hr class="is-divider">
        {{/content}}
    {{/snippet}}
</section>

<section class="section">
    {{#> snippet id="divider-2" title="Séparateur avec +"}}
        {{#content "light"}}
            <hr class="is-divider" data-content="+">
        {{/content}}
    {{/snippet}}
</section>

<section class="section">
    {{#> snippet id="divider-3" title="Séparateur sans marge" desc="Séparateur en pleine largeur dans un autre composant grâce à la classe <code>is-unboxed</code>"}}
        {{#content "light"}}
            <div class="box">
                <div class="box-content">
                    <p>Élément positionné normalement</p>
                    <hr class="is-divider is-unboxed">
                    <p>Élément dont on annule les marges via "is-unboxed"</p>
                </div>
            </div>
        {{/content}}
    {{/snippet}}
</section>

{{/content}}
{{/extend}}
