---
title: Menu
active: {
    components: {
        menu: true
    }
}
root: ../
---
{{#extend "menu-page"}}
{{#content "content"}}
{{#> components-title desc="Menu"}}{{/components-title }}

<section class="section">
    {{#> snippet id="menu-lateral" title="Menu latéral"}}

    {{#content "light"}}
    <ul class="card menu-list aside-menu-list">
        <li><a>Item #1</a></li>
        <li>
            <a class="is-active">Item #2</a>
            <ul>
                <li><a>Sous-item #1</a></li>
                <li><a>Sous-item #2</a></li>
                <li><a>Sous-item #3</a></li>
            </ul>
        </li>
        <li><a>Item #3</a></li>
        <li><a>Dernier élément du menu</a></li>
    </ul>
    {{/content}}
    {{/snippet}}
</section>

<section class="section">
    {{#> snippet id="menu-deroulant" title="Menu déroulant"}}

    {{#content "light"}}
    <aside class="menu has-background-white is-pulled-left">
        <div class="field">
            <h2 class="has-text-weight-bold">Miguel</h2>
        </div>

        <div class="field">
            <div class="control has-icons-right">
                <input class="input" type="search" placeholder="Rechercher">
                <span class="icon is-right">
                    <i class="flexi-ui-search"></i>
                </span>
            </div>
        </div>

        <ul class="menu-list has-text-weight-bold">
            <li><a class="with-arrow">Infos personnelles</a></li>
            <li><a class="with-arrow">Factures et paiements</a></li>
            <li>
                <a class="with-arrow">Messagerie
                    <span class="badge">3</span>
                </a>
            </li>
            <li><a class="with-arrow">Commande</a></li>
        </ul>

        <ul class="menu-list has-text-weight-bold">
            <li>
                <a class="with-arrow">
                    <span class="icon">
                        <i class="flexi-ui-question-circle"></i>
                    </span>
                    Aide & Contact
                </a>
            </li>
            <li>
                <a class="with-arrow">
                    <span class="icon">
                        <i class="flexi-ui-shopping-cart"></i>
                    </span>
                    Boutique en ligne
                </a>
            </li>
        </ul>

        <ul class="menu-list has-text-weight-bold">
            <li>
                <a>
                    <span class="icon">
                        <i class="flexi-ui-power"></i>
                    </span>
                    Déconnexion
                </a>
            </li>
        </ul>
    </aside>
    {{/content}}
    {{/snippet}}
</section>

{{/content}}
{{/extend}}
