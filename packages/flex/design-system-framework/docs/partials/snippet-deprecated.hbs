<div class="container">
    <h2 class="title is-size-4">{{ title }} {{#if draft}}<div class="tag is-warning">draft</div>{{/if}}</h2>
    <p>{{{ desc }}}</p>

    <div class="snippets snippet-deprecated">
        <div class="columns is-multiline">
            <div class="column is-12 overview-code sandbox-context" data-code-preview>
                <div class="box is-warning">
                    <div class="box-header">
                        <p>Code devenu incorrect</p>
                    </div>
                    <div class="box-content">
                        <div class="columns is-multiline">
                            <div class="column">
                                <p class="suptitle">Aperçu</p>
                            </div>

                            <div class="column is-12">
                                <div class="code-preview-wrapper">
                                    <div class="code-preview {{#if large}}is-large{{/if}} {{#if shrink}}is-shrink-{{shrink}}{{/if}}">
                                        {{#block "light"}} {{> @partial-block }} {{/block}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-content has-background-grey-lighter">
                        <div class="snippet-code">
                            <div class="columns">
                                <div class="column">
                                    <p class="suptitle">HTML</p>
                                </div>
                            </div>
                            <div class="line">
                                <textarea class="code-editor">{{#block "light"}} {{ @partial-block }} {{/block}}</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="columns">
            {{#if warning}}
                <div class="column">
                    <div class="box is-warning">
                        <div class="box-header">
                            <div class="box-title">Attention</div>
                        </div>
                        <div class="box-content">
                            {{#block "warning"}} {{> @partial-block }} {{/block}}
                        </div>
                    </div>
                </div>
            {{/if}}

            {{#if dont}}
                <div class="column">
                    <div class="box is-danger">
                        <div class="box-header">
                            <div class="box-title">Ne pas faire</div>
                        </div>
                        <div class="box-content">
                            {{#block "dont"}} {{> @partial-block }} {{/block}}
                        </div>
                    </div>
                </div>
            {{/if}}

            {{#if replaced}}
                <div class="column">
                    <div class="box is-success">
                        <div class="box-header">
                            <div class="box-title">Remplacé par :</div>
                        </div>
                        <div class="box-content">
                            {{#block "replaced"}} {{> @partial-block }} {{/block}}
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>
