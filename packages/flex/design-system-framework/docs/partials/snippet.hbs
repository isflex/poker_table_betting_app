<div class="container" id="{{ id }}">
    <h2 class="title is-size-4">{{ title }} {{#if draft}}<div class="tag is-warning">draft</div>{{/if}}</h2>
    <p>{{{ desc }}}</p>

    <div class="snippets">
        <div class="columns is-multiline">
            <div class="column is-12 overview-code sandbox-context" data-code-preview>
                <div class="box">
                    <!-- aperçu -->
                    <div class="box-content">
                        <div class="columns is-multiline">
                            <div class="column">
                                <p class="suptitle">Aperçu</p>
                                <p>{{#if nopreview}}Pas d'aperçu nécessaire pour ce morceau de code{{/if}}</p>
                            </div>
                            <div class="column is-narrow">
                                <div class="field">
                                    <div class="control {{#if nopreview}}is-hidden{{/if}}">
                                        <input data-responsive-toggle class="switch is-checkradio is-info" type="checkbox" id="switch-responsive-{{id}}">
                                        <label for="switch-responsive-{{id}}">Mode responsive</label>
                                    </div>
                                </div>
                            </div>
                            <div class="column is-12 {{#if nopreview}}is-hidden{{/if}}">
                                <div class="code-preview-wrapper">
                                    <div class="code-preview {{#if large}}is-large{{/if}} {{#if shrink}}is-shrink-{{shrink}}{{/if}}">
                                        {{#block "light"}} {{> @partial-block }} {{/block}}
                                    </div>
                                    <div class="responsive-container">
                                        <div class="iframe-container">
                                            <p class="size-container"></p>
                                            <iframe src=""></iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- code HTML -->
                    <div class="box-content has-background-grey-lighter">
                        <div class="snippet-code">
                            <div class="columns">
                                <div class="column">
                                    <p class="suptitle">HTML</p>
                                </div>
                                <div class="column is-narrow">
                                    <button class="button is-primary is-small is-outlined code-copy">Copier</button>
                                </div>
                            </div>
                            <div>
                                <textarea class="code-editor">{{#block "light"}} {{ @partial-block }} {{/block}}</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{#if dark}}
                <div class="column is-12 overview-code sandbox-context" data-code-preview>
                    <div class="box">
                        <div class="box-content has-background-grey-dark">
                            <div class="columns is-multiline">
                                <div class="column">
                                    <p class="suptitle has-text-white">Aperçu avec un fond</p>
                                </div>
                                <div class="column is-12">
                                    <div class="code-preview-wrapper">
                                        <div class="code-preview {{#if large}}is-large{{/if}} {{#if shrink}}is-shrink-{{shrink}}{{/if}}">
                                            {{#block "dark"}} {{> @partial-block }} {{/block}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-content has-background-grey-lighter">
                            <div class="snippet-code">
                                <div class="columns">
                                    <div class="column">
                                        <p class="suptitle">HTML</p>
                                    </div>
                                    <div class="column is-narrow">
                                        <button class="button is-primary is-small is-outlined code-copy">Copier</button>
                                    </div>
                                </div>
                                <div>
                                    <textarea class="code-editor">{{#block "dark"}} {{ @partial-block }} {{/block}}</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>
        <div class="columns">
            {{#if do}}
                <div class="column">
                    <div class="box is-success">
                        <div class="box-header">
                            <div class="box-title">Faire</div>
                        </div>
                        <div class="box-content">
                            {{#block "do"}} {{> @partial-block }} {{/block}}
                        </div>
                    </div>
                </div>
            {{/if}}

            {{#if warning}}
                <div class="column">
                    <div class="box is-warning">
                        <div class="box-header">
                            <div class="box-title">Attention</div>
                        </div>
                        <div class="box-content">
                            {{#block "warning"}} {{> @partial-block }} {{/block}}
                        </div>
                    </div>
                </div>
            {{/if}}

            {{#if dont}}
                <div class="column">
                    <div class="box is-danger">
                        <div class="box-header">
                            <div class="box-title">Ne pas faire</div>
                        </div>
                        <div class="box-content">
                            {{#block "dont"}} {{> @partial-block }} {{/block}}
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>
