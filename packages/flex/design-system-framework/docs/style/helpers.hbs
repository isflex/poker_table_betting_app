---
title: Helpers
menu: true
active: {
    style: {
        helpers: true
    }
}
root: ../
---

{{#extend "menu-page"}}

    {{#content "content"}}

        <div class="hero is-small is-instit">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">Helpers</h1>
                </div>
            </div>
        </div>

        <section class="section">
            <div class="container">
                {{#> snippet id="border" title="Bordure" desc="La classe <code>is-bordered</code> permet d'ajouter une bordure avec la couleur par défaut"}}
                {{#content "light"}}
                <div style="width: 200px; height: 200px" class="is-bordered"></div>
                {{/content}}
                {{/snippet}}
            </div>
        </section>

        <section class="section">
            <div class="container">
                {{#> snippet id="rounded" title="Cercle" desc="La classe <code>is-rounded</code> permet d'arrondir un élement"}}
                {{#content "light"}}
                <div style="width: 200px; height: 200px; background-color: #004d71" class="is-rounded"></div>
                {{/content}}
                {{/snippet}}
            </div>
        </section>
    {{/content}}
{{/extend}}
