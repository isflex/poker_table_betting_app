    <section class="section">
        <div class="container">
            <h3 class="title is-3">Nouvelle plateforme de marque</h3>
            <div class="columns is-multiline">
                {{#each (readdir "docs/templates/npm")}}
                    {{#if (includes ".hbs")}}
                        <div class="column is-3">
                            <div class="card">
                                <div class="card-image">
                                    <!-- FIXME : Trouver une solution plus pérenne -->
                                    <a href="{{root}}{{ replaceFirst (replaceFirst this "docs/" "") "docs" "" }}">
                                        <img src="{{root}}{{replace (replace (replaceFirst (replaceFirst this "docs/" "") "docs" "") "templates" "templates/previews/") "hbs" "html.png" }}">
                                    </a>
                                </div>
                                <div class="card-content">
                                    <h5 class="title is-5 has-text-weight-normal is-capitalized">
                                        {{replace (replace (replace (replaceFirst this "docs/" "") "templates/npm/" "") ".hbs" "") "_" " "}}
                                    </h5>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
