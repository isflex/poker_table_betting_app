{{#extend "templates/aco-layout"}}
{{#content "page"}}

    <main class="main-content">
        <section class="hero is-instit is-centered">
            <div class="hero-body">
                <div class="container is-medium">
                    <h1 class="title">Lorem ipsum</h1>
                </div>
            </div>
        </section>

        <div class="buttons has-text-centered">
            <a class="button is-primary" onclick="document.querySelector('.modal').classList.add('is-active')">Click me</a>
        </div>

        <div class="modal">
            <div class="modal-background"></div>
            <div class="modal-content">
                <div class="box has-text-centered">
                    <div class="box-content">
                        <button class="modal-close is-large" aria-label="close" onclick="document.querySelector('.modal').classList.remove('is-active')"></button>
                        <header>
                            <span class="icon is-large">
                                <i class="flexi-ui-check-circle is-success"></i>
                            </span>
                        </header>

                        <h1 class="title is-4">Lorem ipsum</h1>
                        <form action="">
                            <div class="field">
                                <div class="control has-dynamic-placeholder">
                                    <input class="input" type="text" placeholder="Text input">
                                    <label>Text input</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control has-dynamic-placeholder has-icons-right">
                                    <input class="input" type="password" placeholder="Votre mot de passe">
                                    <label>Votre mot de passe</label>
                                    <span class="icon is-small">
                                        <i class="flexi-ui-eye-s"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="buttons">
                                <a class="button is-primary">Valider</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
{{/content}}
{{/extend}}
