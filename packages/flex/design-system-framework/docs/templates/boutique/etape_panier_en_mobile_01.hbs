            <h3 class="title is-3 has-text-centered">Coordonnées</h3>

            <div class="box">
                <div class="box-content">
                    <form action="">
                        <h6 class="title is-6">Coordonnées</h6>

                        <div class="field is-horizontal is-mobile">
                            <div class="field-body">
                                <div class="field is-narrow">
                                    <div class="control">
                                        <input class="input is-checkradio is-hidden" type="radio" name="civilite" id="_JTH9ZUUKT1RD8" value="0">
                                        <label for="_JTH9ZUUKT1RD8">Monsieur</label>
                                    </div>
                                </div>
                                <div class="field is-narrow">
                                    <div class="control">
                                        <input class="input is-checkradio is-hidden" type="radio" name="civilite" id="_JTH9ZVCBXLD4E" value="1">
                                        <label for="_JTH9ZVCBXLD4E">Monsieur</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control has-dynamic-placeholder">
                                <input class="input" type="text" placeholder="Nom*">
                                <label class="input-dynamic-placeholder">Nom*</label>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control has-dynamic-placeholder">
                                <input class="input" type="text" placeholder="Prénom*">
                                <label class="input-dynamic-placeholder">Prénom*</label>
                            </div>
                        </div>

                        <h6 class="title is-6">Date de naissance</h6>
                        <div class="columns is-mobile">
                            <div class="column">
                                <div class="field">
                                    <div class="control">
                                        <div class="select">
                                            <select>
                                                <option selected="selected">JJ</option>
                                                <option>01</option>
                                                <option>02</option>
                                                <option>03</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="column">
                                <div class="field">
                                    <div class="control">
                                        <div class="select">
                                            <select>
                                                <option selected="selected">MM</option>
                                                <option>01</option>
                                                <option>02</option>
                                                <option>03</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="column">
                                <div class="field">
                                    <div class="control">
                                        <div class="select">
                                            <select>
                                                <option selected="selected">AAAA</option>
                                                <option>2019</option>
                                                <option>2018</option>
                                                <option>2017</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control has-dynamic-placeholder">
                                <input class="input" type="text" placeholder="Département de naissance*">
                                <label class="input-dynamic-placeholder">Département de naissance*</label>
                            </div>
                        </div>

                        <h6 class="title is-6">Adresse</h6>

                        <div class="field">
                            <div class="control has-dynamic-placeholder">
                                <input class="input" type="text" placeholder="Code postal">
                                <label class="input-dynamic-placeholder">Code postal</label>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control has-dynamic-placeholder">
                                <input class="input" type="text" placeholder="Ville">
                                <label class="input-dynamic-placeholder">Ville</label>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control has-dynamic-placeholder">
                                <input class="input" type="text" placeholder="Adresse">
