                                <div class="select">
                                    <select>
                                        <option selected="selected">Pays</option>
                                        <option>France</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="field">
                            <input class="is-checkradio has-background-color is-info" id="example1" type="checkbox" name="example1" checked="checked">
                            <label for="example1">Utiliser comme adresse de facturation</label>
                        </div>

                        <section class="accordions is-attached">
                            <article class="accordion is-active">
