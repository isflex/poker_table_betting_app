                                    <p>Ajouter une adresse de livraison</p>
                                    <button class="toggle" aria-label="toggle"></button>
                                </div>
                                <div class="accordion-body">
                                    <div class="accordion-content">
                                        <h6 class="title is-6">Adresse de livraison</h6>

                                        <div class="field">
                                            <div class="control has-dynamic-placeholder">
                                                <input class="input" type="text" placeholder="Code postal">
                                                <label class="input-dynamic-placeholder">Code postal</label>
                                            </div>
                                        </div>

                                        <div class="field">
                                            <div class="control has-dynamic-placeholder">
                                                <input class="input" type="text" placeholder="Ville">
                                                <label class="input-dynamic-placeholder">Ville</label>
                                            </div>
                                        </div>

                                        <div class="field">
                                            <div class="control has-dynamic-placeholder">
                                                <input class="input" type="text" placeholder="Adresse">
                                                <label class="input-dynamic-placeholder">Adresse</label>
                                            </div>
                                        </div>

                                        <div class="field">
                                            <div class="control has-dynamic-placeholder">
                                                <input class="input" type="text" placeholder="Bâtiment, appartement... (optionnel)">
                                                <label class="input-dynamic-placeholder">Bâtiment, appartement... (optionnel)</label>
                                            </div>
                                        </div>

                                        <div class="field">
                                            <div class="control">
                                                <div class="select">
