    <section class="section has-text-centered">
        <div class="stepper" data-label-mobile="Coordonnées">
            <div class="step" data-label="Panier">1</div>
            <div class="step is-current is-active" data-label="Coordonnées">2</div>
            <div class="step" data-label="Livraison">3</div>
