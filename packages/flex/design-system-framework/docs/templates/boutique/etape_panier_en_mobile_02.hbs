                                            <h6 class="title is-6">Bouygues Telecom Paris République</h6>

                                            <p class="text is-1">
                                                <span class="is-block">16 Place de la République</span>
                                                <span>75010 Paris</span>
                                            </p>
                                            <p class="text is-1">09 81 66 21 28</p>

                                            <div class="is-divider is-marginless"></div>

                                            <section class="accordions">
                                                <article class="accordion">
                                                    <div class="accordion-header is-grouped is-justified-center-mobile is-justified-left-tablet toggle">
                                                        <h5>Voir les horaires</h5>
                                                        <button class="toggle" aria-label="toggle"></button>
                                                    </div>

                                                    <div class="accordion-body">
                                                        <div class="accordion-content">
                                                            <div class="table-container">
                                                                <table class="table is-compact">
                                                                    <tbody>
                                                                        <tr>
                                                                            <td>Lundi</td>
                                                                            <td><p>De 9h30 à 19h00</p></td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Mardi</td>
                                                                            <td><p>De 9h30 à 19h00</p></td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Mercredi</td>
                                                                            <td><p>De 9h30 à 19h00</p></td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Jeudi</td>
                                                                            <td><p>De 9h30 à 19h00</p></td>
                                                                        </tr>
                                                                        <tr class="has-text-weight-semibold">
                                                                            <td>Vendredi</td>
                                                                            <td><p>De 9h30 à 19h00</p></td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Samedi</td>
                                                                            <td><p>Fermé</p></td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Dimanche</td>
                                                                            <td><p>De 9h30 à 19h00</p></td>
                                                                        </tr>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </article>
                                            </section>

                                            <button class="button is-primary">
                                                <span class="icon-and-text">
                                                    <span class="icon is-hidden">
                                                        <i class="flexi-ui-check-r has-text-white"></i>
                                                    </span>
                                                    <span>Sélectionné</span>
                                                </span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Mode livraison : relais Colis -->
                        <div class="box is-flat">
                            <div class="box-content has-background-grey-lighter">
                                <div class="field is-mobile">
                                    <div class="field is-narrow">
                                        <div class="control">
                                            <input checked="checked" class="is-checkradio" id="relaisColis" name="type" type="radio">
                                            <label for="relaisColis">
                                                <span class="has-text-weight-semibold">Retrait en Relais colis</span>
                                                <span class="paragraph text is-2 is-marginless">Livraison prévu entre le 09/03 et le 11/03</span>
                                                <span class="paragraph text has-text-primary has-text-weight-semibold is-uppercase">Gratuit</span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Mode livraison : colissimo -->
                        <div class="box is-flat">
                            <div class="box-content has-background-grey-lighter">
                                <div class="field is-mobile">
                                    <div class="field is-narrow">
                                        <div class="control">
                                            <input checked="checked" class="is-checkradio" id="livraison" name="type" type="radio">
                                            <label for="livraison">
                                                <span class="has-text-weight-semibold">Livraison à domicile Colissimo</span>
                                                <span class="paragraph text is-2 is-marginless">Livraison prévu entre le 10/03 et le 15/03</span>
                                                <span class="paragraph text has-text-primary has-text-weight-semibold is-uppercase">10€</span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                    <div class="is-divider"></div>

                    <a href="#" class="button is-primary" disabled="true">Continuer</a>
                </div>
            </div>

            <div class="has-text-centered">
                <a class="link has-text-primary">Sauvegarder et revenir plus tard</a>
            </div>
        </div>
    </section>
</main>

