                                                                            <td><p>Fermé</p></td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Dimanche</td>
                                                                            <td><p>De 9h30 à 19h00</p></td>
                                                                        </tr>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </article>
                                            </section>
                                            <button class="button is-success">
                                                <span class="icon-and-text">
                                                    <span class="icon">
                                                        <i class="flexi-ui-check-r has-text-white"></i>
                                                    </span>
                                                    <span>Sélectionné</span>
                                                </span>
                                            </button>
                                        </div>

                                        <div class="box-content">
                                            <div class="is-divider is-unboxed"></div>

                                            <span class="icon-and-text">
                                                <span class="icon is-medium is-info is-marginless">
                                                    <span class="flexi-ui-marker-s"></span>
