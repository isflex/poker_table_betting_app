{
  "name": "@flex-design-system/framework",
  "version": "0.0.1",
  "description": "Flexiness design system",
  "keywords": [
    "Flexiness",
    "design system",
    "framework",
    "bulma",
    "css"
  ],
  "author": "Flexiness <hello@flexiness.com>",
  "license": "UNLICENSED",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "start:sass": "yarn sass --watch ./src/modules3/default/all.module.scss ../domain-content/content/css/modules/allv3.module.css",
    "start:sass:rollup": "npx rollup -c rollup.modules3.config.js --watch",
    "start:docs": "parcel --version && parcel docs/index.hbs --open --no-cache",
    "prestart": "yarn build:fonts",
    "watch": "yarn watch:css | yarn watch:js",
    "watch:js": "parcel watch ./src/index.js --no-source-maps -d dist -o flexiness-ds.js",
    "watch:css": "parcel watch ./src/flexiness-ds.scss --no-source-maps -d dist -o flexiness-ds.css",
    "test": "yarn build && yarn test:size && cd tests && backstop reference && backstop test",
    "test:approve": "yarn build && cd tests && standalone -m index.html -o reference.html",
    "build": "mkdir -p dist && yarn build:css:prod && yarn build:framework:prod",
    "build:lib": "dotenv -e $PROJECT_CWD/env/public/.env.$FLEX_MODE yarn build:fonts",
    "build:js": "parcel build ./src/index.js --no-minify --no-source-maps -d dist -o flexiness-ds.js",
    "build:framework:dev": "dotenv -e $PROJECT_CWD/env/public/.env.$FLEX_MODE yarn build:types:modules3:default",
    "build:framework:prod": "dotenv -e $PROJECT_CWD/env/public/.env.$FLEX_MODE yarn build:types:modules3:default",
    "build:css:dev": "dotenv -e $PROJECT_CWD/env/public/.env.$FLEX_MODE yarn build:css:all && yarn cp:css",
    "build:css:prod": "dotenv -e $PROJECT_CWD/env/public/.env.$FLEX_MODE yarn build:css:all && yarn cp:css",
    "build:css": "yarn clean:css && yarn cp:fonts && yarn build:css:rollup",
    "build:css:all": "yarn clean:css && yarn cp:fonts && yarn build:css:rollup && yarn build:css:namespace:gulp",
    "build:css:parcel": "parcel build ./src/flexiness-ds*.scss ./src/assets/svg/*.svg ./src/assets/jpg/transparent-noise.png ./src/assets/fonts/*.woff* --no-source-maps --no-content-hash && yarn gulp namespace-css",
    "build:css:rollup": "yarn build:css:global:rollup && yarn build:css:modules3:rollup",
    "build:css:global:rollup": "yarn rollup -c rollup.global.config.js",
    "build:css:modules3:rollup": "yarn rollup -c rollup.modules3.config.js",
    "build:css:namespace:gulp": "yarn gulp namespace-css",
    "build:docs": "rimraf dist build-docs && yarn build:fonts && yarn build:css && parcel build docs/*.hbs -d build-docs",
    "build:docs:gitlab": "yarn build:docs --public-url \"/frontoffice/flexiness-ds/\"",
    "build:docs:template-previews": "yarn build:docs --public-url \"..\" && yarn gulp docs-template-previews",
    "build:fonts": "yarn gulp webfonts && yarn gulp content-fonts && yarn cp:fonts",
    "build:types:modules3:default": "yarn typed-scss-modules \"./src/modules3/**/*.scss\" --exportType default --implementation sass --aliasPrefixes.~ ../../../.yarn/cache/",
    "postbuild:js": "yarn build:min:js",
    "build:min": "yarn build:css && yarn build:min:js",
    "build:min:js": "parcel build ./src/index.js -d dist -o flexiness-ds.min.js",
    "clean:css": "rimraf '{dist/flexiness*.css,dist/modules/*.module.css,../domain-content/content/css/flexiness*.css,../domain-content/content/css/modules/*.css}'",
    "cp:css": "cp dist/flexiness*.css ../domain-content/content/css/ && mkdir -p ../domain-content/content/css/modules && cp dist/modules/*.module.css ../domain-content/content/css/modules/",
    "cp:fonts": "cp ./src/assets/fonts/flexi*.{woff,woff2} ../domain-content/content/assets/fonts/",
    "prepare": "yarn build",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint **.js",
    "lint:css": "stylelint --cache './src/**/*.{sc,sa,le,c}ss'",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:css:fix": "yarn lint:css --fix",
    "info:footprint:css": "yarn gulp components-size-footprint",
    "test:size": "size-limit"
  },
  "devDependencies": {
    "@bulvar/bulma": "0.11.10",
    "@vusion/webfonts-generator": "0.8.0",
    "autoprefixer": "^10.4.14",
    "babel-eslint": "10.1.0",
    "backstopjs": "6.1.1",
    "bulma": "0.9.4",
    "bulma-extensions": "6.2.7",
    "bulma-popover": "1.1.1",
    "codemirror": "6.0.1",
    "css-byebye": "4.0.1",
    "cssnano": "5.1.12",
    "dotenv-cli": "7.3.0",
    "eslint": "8.19.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "15.2.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.31.10",
    "event-stream": "4.0.1",
    "fancy-log": "2.0.0",
    "fontsubset": "0.2.0",
    "glob": "8.0.3",
    "gulp": "4.0.2",
    "gulp-all": "1.1.0",
    "gulp-concat": "2.6.1",
    "gulp-rename": "2.0.0",
    "gulp-replace": "1.1.3",
    "handlebars": "4.7.7",
    "handlebars-helpers": "0.10.0",
    "js-base64": "3.7.2",
    "mini-css-extract-plugin": "2.7.6",
    "node-fetch": "3.2.6",
    "parcel": "2.7.0",
    "plugin-error": "2.0.0",
    "postcss": "8.4.29",
    "postcss-autoreset": "3.0.4",
    "postcss-cli": "10.1.0",
    "postcss-import": "15.1.0",
    "postcss-initial": "3.0.4",
    "postcss-load-config": "4.0.1",
    "postcss-loader": "7.3.3",
    "postcss-modules": "6.0.0",
    "postcss-nested": "6.0.1",
    "postcss-nesting": "11.2.2",
    "postcss-preset-env": "8.2.0",
    "postcss-scss": "4.0.6",
    "postcss-sorting": "8.0.2",
    "postcss-utilities": "0.8.4",
    "puppeteer": "19.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.76.0",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-scss": "4.0.0",
    "sass": "1.66.1",
    "sass-loader": "13.3.2",
    "size-limit": "7.0.8",
    "standalone-html": "0.2.3",
    "stylelint": "14.9.1",
    "stylelint-config-standard": "26.0.0",
    "stylelint-config-standard-scss": "4.0.0",
    "sugarss": "4.0.1",
    "through2": "4.0.2",
    "ttf2woff": "3.0.0",
    "ttf2woff2": "4.0.5",
    "typed-scss-modules": "7.1.4",
    "underscore": "1.13.4",
    "util": "0.12.4",
    "webfonts-generator": "0.4.0",
    "webpack": "5.88.2"
  },
  "size-limit": [
    {
      "name": "flexiness-ds-core css (minified)",
      "limit": "80 KB",
      "path": "./dist/flexiness-ds-core.css",
      "webpack": false,
      "gzip": false
    },
    {
      "name": "flexiness-ds-core css (minified, gzipped)",
      "limit": "10 KB",
      "path": "./dist/flexiness-ds-core.css",
      "webpack": false,
      "gzip": true
    },
    {
      "name": "flexiness-ds css (minified) 200Kb (+/- 10%)",
      "path": "./dist/flexiness-ds.css",
      "webpack": false,
      "gzip": false
    },
    {
      "name": "flexiness-ds css (minified, gziped) 30Kb (+/- 10%)",
      "limit": "50KB",
      "path": "./dist/flexiness-ds.css",
      "webpack": false,
      "gzip": true
    }
  ],
  "engines": {
    "npm": "NO LONGER USED - Please use yarn"
  }
}
