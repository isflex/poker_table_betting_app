{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 480
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    },
    {
      "label": "desktop",
      "width": 1440,
      "height": 900
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "Design System Framework tests",
      "url": "./index.html",
      "referenceUrl": "./reference.html",
      "selectors": [
        "body > *"
      ],
      "selectorExpansion": true,
      "readyEvent": null,
      "delay": 1000,
      "onReadyScript": null,
      "onBeforeScript": null
    },{
      "label": "Design System Framework tests (hover)",
      "hoverSelector": [
        ".button", ".link"
      ],
      "url": "./index.html",
      "referenceUrl": "./reference.html",
      "selectors": [
        "body > *"
      ],
      "selectorExpansion": true,
      "readyEvent": null,
      "delay": 1000,
      "onReadyScript": null,
      "onBeforeScript": null
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": ["browser"],
  "engine": "chromy",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
