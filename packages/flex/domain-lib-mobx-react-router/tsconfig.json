{
  "compilerOptions": {
    "declaration": true,  
    "target": "es2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "flexiness": ["../types"],
      "flex-design-system-framework/*": ["../design-system-framework/src/modules3/default/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "../../../node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "lib/**/*",
    "module/**/*",
    "dist/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}

