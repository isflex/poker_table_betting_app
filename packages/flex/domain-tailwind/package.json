{
  "name": "@flexiness/domain-tailwind",
  "version": "0.0.1",
  "description": "Tailwind module for micro frontend development",
  "keywords": [],
  "author": "Flexiness <hello@flexiness.com>",
  "license": "MIT",
  "files": [
    "build",
    "dist",
    "src"
  ],
  "scripts": {
    "start": "yarn cp:module:imports && yarn start:tailwind:css:watch",
    "start:tailwind:css:watch": "tailwindcss --watch -i ./src/styles/globals.css -o ./dist/styles/globals.css",
    "build:lib": "yarn cp:module:imports && yarn build:tailwind:css && yarn cp:css",
    "build:tailwind:css": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles/globals.css",
    "build:webpack": "env-cmd -f $PROJECT_CWD/env/public/.env.$FLEX_MODE webpack --config webpack.config.cjs --mode $FLEX_MODE",
    "build:tsc": "tsc -p ./tsconfig.build.json",
    "clean:lib": "yarn clean:source && yarn clean:built",
    "clean:source": "rimraf '{src/**/*.d.ts,src/**/*.js,src/**/*.js.map}'",
    "clean:built": "rimraf '{lib,module,dist,*.tsbuildinfo}'",
    "clean:tsc:buildinfo": "rimraf '{*.tsbuildinfo}'",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --color --quiet --cache",
    "lint:fix": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix",
    "test": "node ./test.mjs",
    "test:ts": "ts-node --esm ./test.mts",
    "cp:css": "mkdir -p ../domain-content/content/css/tailwind && cp -v ./dist/styles/*.css ../../flex/domain-content/content/css/tailwind/",
    "cp:module:imports": "mkdir -p ./dist/styles/modules && ncp ./src/styles/modules ./dist/styles/modules"
  },
  "devDependencies": {
    "@flexiness/certs": "link:@flexiness/certs",
    "@tailwindcss/forms": "0.5.3",
    "@types/node": "^18.0.3",
    "flexiness": "link:@types/flexiness",
    "import-meta-resolve": "2.2.2",
    "loglevel": "1.8.0",
    "ncp": "^2.0.0",
    "postcss": "^8.4.21",
    "postcss-cli": "10.1.0",
    "postcss-import": "15.1.0",
    "postcss-loader": "7.1.0",
    "postcss-nesting": "11.2.2",
    "postcss-preset-env": "8.2.0",
    "postcss-syntax": "0.36.2",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "rimraf": "^3.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "concurrently": "^7.2.2",
    "cors": "2.8.5",
    "css-loader": "^6.7.1",
    "detect-port": "1.5.1",
    "dotenv-expand": "9.0.0",
    "env-cmd": "^10.1.0",
    "express": "4.18.2",
    "file-loader": "6.2.0",
    "find-yarn-workspace-root": "2.0.0",
    "fork-ts-checker-webpack-plugin": "8.0.0",
    "html-webpack-plugin": "5.5.0",
    "mini-css-extract-plugin": "2.6.1",
    "nocache": "3.0.4",
    "nodemon": "2.0.20",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "6.1.0",
    "regex-escape": "3.4.10",
    "serve-index": "1.9.1",
    "serve-static": "1.15.0",
    "tailwindcss": "^3.3.0",
    "ts-loader": "9.4.2",
    "tsconfig-paths-webpack-plugin": "3.5.2",
    "typescript": "4.7.4",
    "webpack": "5.75.0"
  },
  "packageManager": "yarn@3.6.3"
}
