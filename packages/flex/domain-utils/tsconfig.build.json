{
  "extends": "../../../tsconfig.build.settings.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "flexiness": ["../types"],
      "flex-design-system-framework/*": ["../design-system-framework/src/modules3/default/*"]
