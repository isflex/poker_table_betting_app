{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "importHelpers": true,
    "sourceMap": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "typeRoots": [
      "../../../node_modules/@types"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs"
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
