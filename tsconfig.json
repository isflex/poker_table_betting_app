{
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "noEmitHelpers": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "downlevelIteration": true,
    "target": "es2018",
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": false,
    "baseUrl": ".",
    "rootDir": ".",
  },
  "files": [
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
